<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_margin="8dp"
    android:background="@drawable/background"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:background="@color/Inv"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/itemNameTextView"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_below="@id/itemImageView"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/itemPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Price"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_below="@id/itemNameTextView"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/PriceSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OMR"
        android:paddingStart="10dp"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_below="@id/itemNameTextView"
        android:layout_toEndOf="@id/itemPriceTextView"
        />

    <ImageButton
        android:id="@+id/decrementButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_indeterminate_check_box_24"
        android:layout_below="@id/PriceSymbol"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"

        />

    <TextView
        android:id="@+id/quantityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:layout_below="@id/PriceSymbol"
        android:layout_toEndOf="@id/decrementButton"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemImageView"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="0dp"
        android:text="Grilled chicken topped with melted mozzarella cheese, sautéed fresh mushrooms, ripe tomatoes, and a kick of jalapeños for a flavorful and satisfying combination."
        android:textAlignment="center"
        android:textColor="@color/black"></TextView>

    <ImageButton
        android:id="@+id/incrementButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_add_to_photos_24"
        android:layout_below="@id/PriceSymbol"
        android:layout_toEndOf="@id/quantityTextView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        />

</RelativeLayout>
